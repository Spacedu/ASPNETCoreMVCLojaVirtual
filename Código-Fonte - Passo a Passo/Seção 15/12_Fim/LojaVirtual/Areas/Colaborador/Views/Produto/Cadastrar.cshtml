@model LojaVirtual.Models.Produto
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do produto" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Valor"></label>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text">R$</div>
            </div>
            <input asp-for="Valor" class="form-control" placeholder="Digite o preço do produto" />
        </div>
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantidade"></label>
        <div class="input-group mb-2">
            <input asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade de produtos" />
            <div class="input-group-prepend">
                <div class="input-group-text">unid</div>
            </div>
        </div>
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Peso"></label>
        <div class="input-group mb-2">
            <input asp-for="Peso" class="form-control" />
            <div class="input-group-prepend">
                <div class="input-group-text">kg</div>
            </div>
        </div>
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Largura"></label>
        <div class="input-group mb-2">
            <input asp-for="Largura" class="form-control" />
            <div class="input-group-prepend">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Largura" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Altura"></label>
        <div class="input-group mb-2">
            <input asp-for="Altura" class="form-control" />
            <div class="input-group-prepend">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Altura" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comprimento"></label>
        <div class="input-group mb-2">
            <input asp-for="Comprimento" class="form-control" />
            <div class="input-group-prepend">
                <div class="input-group-text">cm</div>
            </div>
        </div>
        <span asp-validation-for="Comprimento" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Valor"></label>
        <select asp-for="Valor" class="form-control" asp-items="@ViewBag.Categorias">
            <option value="">Selecione</option>
        </select>
        <span asp-validation-for="CategoriaPaiId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button> <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>