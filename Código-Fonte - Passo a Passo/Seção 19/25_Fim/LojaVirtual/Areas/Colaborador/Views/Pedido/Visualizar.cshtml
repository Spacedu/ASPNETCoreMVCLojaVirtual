    </div>
</form>


<!-- Modal -->
<form method="post" asp-action="RegistrarRastreamento" asp-route-id="@Model.Pedido.Id">
    <div class="modal fade" id="cancelar-boleto" tabindex="-1" role="dialog" aria-labelledby="cancelar-boleto" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cancelar pedido (Cartão de crédito)</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="motivo">Motivo:</label>
                        <textarea class="form-control" id="motivo" asp-for="@Model.CartaoCredito.Motivo" placeholder="Motivo do cancelamento"></textarea>
                        <span asp-validation-for="@Model.CartaoCredito.Motivo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="cod_banco">Código banco:</label>
                        <input type="text" class="form-control" id="cod_banco" asp-for="@Model.CartaoCredito.BancoCodigo" placeholder="Código do banco">
                        <span asp-validation-for="@Model.CartaoCredito.BancoCodigo" class="text-danger"></span>
                        <a href="http://www.febraban.org.br/associados/utilitarios/Bancos.asp" target="_blank">Consultar</a>
                    </div>

                    <div class="form-group">
                        <label for="agencia">Agência:</label>
                        <input type="text" class="form-control" id="agencia" asp-for="@Model.CartaoCredito.Agencia" placeholder="Nº agência">
                        -
                        <input type="text" maxlength="2" class="form-control" id="agencia_dv" asp-for="@Model.CartaoCredito.AgenciaDV" placeholder="">

                        <span asp-validation-for="@Model.CartaoCredito.Agencia" class="text-danger"></span>
                        <span asp-validation-for="@Model.CartaoCredito.AgenciaDV" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="cc">Conta Corrente:</label>
                        <input type="text" class="form-control" id="cc" asp-for="@Model.CartaoCredito.Conta" placeholder="Conta">
                        -
                        <input type="text" class="form-control" id="cc_dv" asp-for="@Model.CartaoCredito.ContaDV" placeholder="">

                        <span asp-validation-for="@Model.CartaoCredito.Conta" class="text-danger"></span>
                        <span asp-validation-for="@Model.CartaoCredito.ContaDV" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="nome">Nome do proprietário da conta:</label>
                        <input type="text" class="form-control" id="nome" asp-for="@Model.CartaoCredito.Nome" placeholder="Nome">
                        <span asp-validation-for="@Model.CartaoCredito.Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="cpf">CPF do proprietário da conta:</label>
                        <input type="text" class="form-control" id="cpf" asp-for="@Model.CartaoCredito.CPF" placeholder="CPF">
                        <span asp-validation-for="@Model.CartaoCredito.CPF" class="text-danger"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</form>