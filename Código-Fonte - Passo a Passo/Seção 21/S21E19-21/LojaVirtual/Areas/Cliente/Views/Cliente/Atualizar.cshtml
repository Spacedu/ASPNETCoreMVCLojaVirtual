@model LojaVirtual.Models.Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}
<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Atualizar
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <input type="hidden" asp-for="Id" />
                            <header class="card-header">
                                <h4 class="card-title mt-2">Atualizar</h4>
                            </header>
                            <article class="card-body">
                                @{ await Html.RenderPartialAsync("~/Views/Shared/_Mensagem.cshtml"); }
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label asp-for="Nome">Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                        <span asp-validation-for="Nome"></span>
                                    </div>
                                    <div class="col form-group">
                                        <label asp-for="Nascimento">Nascimento</label>
                                        <input type="text" asp-for="Nascimento" class="form-control" placeholder="">
                                        <span asp-validation-for="Nascimento"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="M">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="Sexo" value="F">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                    <span asp-validation-for="Sexo"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CPF">CPF</label>
                                    <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                    <span asp-validation-for="CPF"></span>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="Telefone">Telefone</label>
                                        <input type="text" asp-for="Telefone" class="form-control">
                                        <span asp-validation-for="Telefone"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">E-mail</label>
                                    <input type="text" asp-for="Email" class="form-control" placeholder="">
                                    <span asp-validation-for="Email"></span>
                                </div>



                                <div class="form-group">
                                    <label asp-for="CEP">CEP</label>
                                    <input type="text" asp-for="CEP" class="no-cep cep form-control" placeholder="">
                                    <span asp-validation-for="CEP"></span>
                                    <div class="alert alert-danger" style="display:none;"></div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Estado">Estado</label>
                                    <input type="text" asp-for="Estado" readonly="readonly" class="form-control" placeholder="">
                                    <span asp-validation-for="Estado"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cidade">Cidade</label>
                                    <input type="text" asp-for="Cidade" readonly="readonly" class="form-control" placeholder="">
                                    <span asp-validation-for="Cidade"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Bairro">Bairro</label>
                                    <input type="text" asp-for="Bairro" readonly="readonly" class="form-control" placeholder="">
                                    <span asp-validation-for="Bairro"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Endereco">Endereço</label>
                                    <input type="text" asp-for="Endereco" class="form-control" placeholder="">
                                    <span asp-validation-for="Endereco"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Complemento">Complemento</label>
                                    <input type="text" asp-for="Complemento" class="form-control" placeholder="">
                                    <span asp-validation-for="Complemento"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Numero">Número</label>
                                    <input type="text" asp-for="Numero" class="form-control" placeholder="">
                                    <span asp-validation-for="Numero"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Salvar </button>
                                </div>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
